        <arguments>
          <argument>
            <kind>1</kind>
            <string>if(global.pause==0)
{
if(player_health&gt;0)
{
    if(start==true)
    {
        image_index=sprite_base;
        //base controls
        w_press = (keyboard_check(ord('W')));
        s_press = (keyboard_check(ord('S')));
        a_press = (keyboard_check(ord('A')));
        d_press = (keyboard_check(ord('D')));
        space = (keyboard_check_pressed(vk_space));
        
        if(w_press==true)
        {
            if(y&gt;0+sprite_height/2)
            {
                y-=move_speed;
            }
        }
        if(s_press==true)
        {
            if(y&lt;room_height-104-sprite_height/2)
            {
                y+=move_speed;
            }
        }
        if(a_press==true)
        {
            if(x&gt;0+sprite_width/2)
            {
                x-=move_speed*side_speed;
                image_index=sprite_left;
            }
        }
        if(d_press==true)
        {
            if(x&lt;room_width-sprite_width/2)
            {
                x+=move_speed*side_speed;
                image_index=sprite_right;
            }
        }
    
        if(ammo&lt;100)
            {
                ammo+=1;
            }
    
        if(space==true)
        {   
            if(ammo&gt;=base_gun_cost)
            {
                ammo-=base_gun_cost;
                instance_create(x,y,obj_bullet);
            }
        }
        if(unlock_2==true)
        {
            //shield code
            up_press = (keyboard_check(vk_up));
            left_press = (keyboard_check(vk_left));
            down_press = (keyboard_check(vk_down));
            right_press = (keyboard_check(vk_right));
    
            if(shield_status==false)
            {
                if(up_press==true)
                {
                    shield_status=true;
                    shield=instance_create(x,y-48,obj_player_shield);
                    with(shield)
                    {
                        image_index=0;
                    }
                    alarm[1]=room_speed*shield_cooldown;
                }
                else if(left_press==true)
                {
                    shield_status=true;
                    shield=instance_create(x-32,y,obj_player_shield);
                    with(shield)
                    {
                        image_index=1;
                    }
                    alarm[1]=room_speed*shield_cooldown;
                }
                else if(down_press==true)
                {
                    shield_status=true;
                    shield=instance_create(x,y+48,obj_player_shield);
                    with(shield)
                    {
                        image_index=2;
                    }
                    alarm[1]=room_speed*shield_cooldown;
                }
                else if(right_press==true)
                {
                    shield_status=true;
                    shield=instance_create(x+32,y,obj_player_shield);
                    with(shield)
                    {
                        image_index=3;
                    }
                    alarm[1]=room_speed*shield_cooldown;
                }
            }
        }
    
        if(unlock_3==true)
        {
            //lance controls
            q_press = (keyboard_check_released(ord('Q')));
            e_press = (keyboard_check_released(ord('E')));
    
            if(q_press==true)
            {
                if(ammo&gt;=lance_cost)
                {
                    ammo-=lance_cost;
                    instance_create(x,y,obj_q_bullet);
                }
            }
    
            if(e_press==true)
            {
                if(ammo&gt;=lance_cost)
                {
                    ammo-=lance_cost;
                    instance_create(x,y,obj_e_bullet);
                }
            }
        }
    
        if(unlock_4==true)
        {
            //beam controls
            shift_press = (keyboard_check_pressed(vk_shift));
    
            if(shift_press ==true)
            {
                if(ammo&gt;=beam_cost)
                {
                    ammo-=beam_cost;
                    instance_create(x,y,obj_beam);
                }
            }
        }
    }
    else
    {
        y-=2;
    }
}
else
{
    player_health=0;
    //death sprite
    image_index=sprite_death;
    if(player_lives&gt;=0)
    {
        //respawn
        if(died==false)
        {
            //death sound
            audio_play_sound(snd_explosion, 0, false);
            died=true;
            player_lives--;
            alarm[3]=room_speed*1;
        }
    }
    else if(player_lives&lt;0 &amp;&amp; game_over=false)
    {
        audio_play_sound(snd_explosion, 0, false);
        //game over stuff
        game_over=true;
        alarm[2]=room_speed*1;
    }
}
}
else
{
    if(alarm[0]&gt;0)
    {
        alarm[0]++;
    }
    if(alarm[1]&gt;0)
    {
        alarm[1]++;
    }
    if(alarm[2]&gt;0)
    {
        alarm[2]++;
    }
    if(alarm[3]&gt;0)
    {
        alarm[3]++;
    }
}
</string>
          </argument>
        </arguments>
      </action>
